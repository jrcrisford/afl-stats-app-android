<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <EditText
            android:id="@+id/txtTeamAName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Team A Name" />

        <EditText
            android:id="@+id/txtPlayerAName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Player A Name" />

        <EditText
            android:id="@+id/txtPlayerANumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Team A Number" />

        <Button
            android:id="@+id/btnAddPlayerA"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Player to Team A" />

        <TextView
            android:id="@+id/lblTeamAPlayers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Team A Players:"
            android:textStyle="bold"
            android:paddingTop="12dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="24dp" />

        <EditText
            android:id="@+id/txtTeamBName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Team B Name" />

        <EditText
            android:id="@+id/txtPlayerBName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Player B Name" />

        <EditText
            android:id="@+id/txtPlayerBNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Team B Number" />

        <Button
            android:id="@+id/btnAddPlayerB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Player to Team B" />

        <TextView
            android:id="@+id/lblTeamBPlayers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Team B Players:"
            android:textStyle="bold"
            android:paddingTop="12dp" />

        <Button
            android:id="@+id/btnStartMatch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Start Match"
            android:textStyle="bold" />

    </LinearLayout>
</ScrollView>