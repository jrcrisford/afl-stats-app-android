<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.AFLStatsApp" parent="Theme.Material3.DayNight.NoActionBar">

        <!-- Primary brand color -->
        <item name="colorPrimary">@color/colourPrimary</item>
        <item name="colorOnPrimary">@color/colourOnPrimary</item>

        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/colourSecondary</item>
        <item name="colorOnSecondary">@color/colourOnSecondary</item>

        <!-- Background colors -->
        <item name="android:colorBackground">@color/colourBackground</item>
        <item name="colorSurface">@color/colourSurface</item>
        <item name="colorOnSurface">@color/colourOnSurface</item>

        <!-- Error color -->
        <item name="colorError">@color/colourError</item>

        <!-- Material widget defaults -->
        <item name="materialButtonStyle">@style/Widget.AFLStatsApp.Button</item>
        <item name="materialCardViewStyle">@style/Widget.AFLStatsApp.CardView</item>

        <!-- Default app font -->
        <item name="fontFamily">@font/roboto_black</item>

    </style>
</resources>
